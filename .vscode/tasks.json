{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "cd frontend && npm start",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "cd backend && pip install -r requirements.txt",
            "group": "build"
        },
        {
            "label": "Install Node Dependencies",
            "type": "shell",
            "command": "cd frontend && npm install",
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "cd backend && python -m pytest tests/",
            "group": "test"
        }
    ]
}